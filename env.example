# MCP Server Configuration
MCP_SERVER_NAME=ssh-mcp-server-v2
MCP_SERVER_VERSION=2.0.0
PORT=3000
HOST=0.0.0.0
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
ENABLE_METRICS=true
ENABLE_TRACING=true

# OAuth 2.1 Authentication
OAUTH_ISSUER_URL=https://your-oauth-provider.com
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_INTROSPECTION_ENDPOINT=https://your-oauth-provider.com/oauth2/introspect
OAUTH_REQUIRED_SCOPES=ssh:execute,ssh:read
TOKEN_CACHE_TTL=300

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ssh_mcp
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=ssh-mcp:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_OFFLINE_QUEUE=false

# HashiCorp Vault Configuration
VAULT_ENDPOINT=https://vault.your-company.com:8200
VAULT_TOKEN=your-vault-token
VAULT_NAMESPACE=your-namespace
VAULT_API_VERSION=v1
VAULT_TIMEOUT=5000
VAULT_RETRIES=3

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1h
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
MAX_COMMAND_EXECUTION_TIME=60000
ALLOWED_SSH_KEY_TYPES=rsa,ed25519,ecdsa

# Connection Pool Configuration
POOL_MIN_CONNECTIONS=2
POOL_MAX_CONNECTIONS=10
POOL_ACQUIRE_TIMEOUT=30000
POOL_IDLE_TIMEOUT=300000
POOL_HEALTH_CHECK_INTERVAL=60000
POOL_MAX_RETRIES=3

# Monitoring and Logging
METRICS_PATH=/metrics
HEALTH_PATH=/health
READINESS_PATH=/ready
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=info
LOG_FORMAT=json

# Node Environment
NODE_ENV=development 
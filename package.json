{
  "name": "ssh-mcp-server-v2",
  "version": "2.0.0",
  "description": "Production-ready SSH Model Context Protocol Server with enterprise security and performance optimization",
  "main": "dist/simple-server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/simple-server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t ssh-mcp-server:latest .",
    "docker:run": "docker run -p 3000:3000 ssh-mcp-server:latest",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": ["mcp", "ssh", "ai", "automation", "protocol", "security"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "ssh2": "^1.15.0",
    "node-vault": "^0.10.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.4",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/instrumentation-express": "^0.34.0",
    "@opentelemetry/instrumentation-http": "^0.45.0",
    "@opentelemetry/exporter-jaeger": "^1.18.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "generic-pool": "^3.9.0",
    "p-timeout": "^6.1.2",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/compression": "^1.7.4",
    "@types/ssh2": "^1.11.0",
    "@types/pg": "^8.10.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.6",
    "@types/jest": "^29.5.6",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 